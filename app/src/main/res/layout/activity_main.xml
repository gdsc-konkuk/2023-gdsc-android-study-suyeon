<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myPageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="마이페이지"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_back_button" />

    <ImageView
        android:id="@+id/iv_post_big_bookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/baseline_bookmark_border_24"
        app:layout_constraintRight_toLeftOf="@+id/iv_post_cart"
        app:layout_constraintTop_toBottomOf="@+id/iv_back_button" />

    <ImageView
        android:id="@+id/iv_post_cart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/baseline_shopping_cart_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back_button" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/myPageText"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/konkuklogo"/>
    <TextView
        android:id="@+id/myName"
        android:text="su"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/myPageText"
        app:layout_constraintLeft_toRightOf="@+id/profilePicture"/>
    <TextView
        android:id="@+id/myEmail"
        android:text="kelsey6225@naver.com"
        android:textSize="19sp"
        android:textColor="#CBC7C7"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        app:layout_constraintStart_toEndOf="@+id/profilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/includeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="소속 단체"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/profilePicture"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/includeGroupInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/includeGroup"
        android:background="@drawable/roundbox">
        <TextView
            android:id="@+id/university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건국대학교 컴퓨터공학부"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/konkuk"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="GDSC: Android"
            android:textSize="14sp"
            android:textColor="#007B31"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toStartOf="@+id/konkuk"
            app:layout_constraintTop_toBottomOf="@+id/university"/>
        <ImageView
            android:id="@+id/konkuk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/konkuklogo"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/includeGroupInfo"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/recentAlarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 알림"
                    android:textColor="#9B9B9B"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="30dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/recentAlarmBtn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/myInfoChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 정보 수정"
                    android:textColor="#9B9B9B"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/myInfoChangeBtn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    android:textColor="#9B9B9B"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/noticeBtn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="버전"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="40dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/versionInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0.1"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="42dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:textColor="#9B9B9B"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/logoutBtn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/logdelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원탈퇴"
                    android:textColor="#9B9B9B"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/logdeleteBtn"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/baseline_arrow_forward_ios_24" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>